@page
@model FlightAlright.Pages.Clients.ClientProfileModel
@{
    ViewData["Title"] = "Panel Klienta";
}

<h2>Witaj, @Model.ClientName!</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<p>To jest Twój panel klienta. W przyszłości znajdziesz tu swoje bilety, historię lotów i inne funkcje.</p>

@if (Model.account.RoleId == 1)
{
    <div class="mt-3">
        <a asp-page="/Clients/EditProfile" class="btn btn-warning">Edytuj profil</a>
    </div>

    <div class="mt-3">
        <a asp-page="/Clients/ClientTickets" class="btn btn-success">Status biletów</a>
    </div>
}