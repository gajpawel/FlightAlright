@page
@model FlightAlright.Pages.Client.ClientTicketsModel
@{
    ViewData["Title"] = "Moje bilety";
}

<h2>Moje bilety</h2>
<br />

<div class="row">
    <div class="col-md-4">
        <h4>Aktywne</h4>
        @foreach (var ticket in Model.ActiveTickets)
        {
            <div class="card mb-3 p-2">
                <p><strong>Lot:</strong> @ticket.Price?.Flight?.DepartureAirport?.Name → @ticket.Price?.Flight?.ArrivalAirport?.Name</p>
                <p><strong>Data wylotu:</strong> @ticket.Price?.Flight?.DepartureDate?.ToString("g")</p>
                <p><strong>Data przylotu:</strong> @ticket.Price?.Flight?.ArrivalDate?.ToString("g")</p>
                <p><strong>Klasa:</strong> @ticket.Price?.Class?.Name</p>
                <p><strong>Miejsce:</strong> @ticket.Seating</p>
                <p><strong>Dodatkowy bagaż:</strong> @(ticket.ExtraLuggage == true ? "Tak" : "Nie")</p>
                <p><strong>Cena:</strong> @ticket.TicketPrice zł</p>
            </div>
        }
    </div>

    <div class="col-md-4">
        <h4>Anulowane</h4>
        @foreach (var ticket in Model.CancelledTickets)
        {
            <div class="card mb-3 p-2 bg-light">
                <p><strong>Lot:</strong> @ticket.Price?.Flight?.DepartureAirport?.Name → @ticket.Price?.Flight?.ArrivalAirport?.Name</p>
                <p><strong>Data wylotu:</strong> @ticket.Price?.Flight?.DepartureDate?.ToString("g")</p>
                <p><strong>Data przylotu:</strong> @ticket.Price?.Flight?.ArrivalDate?.ToString("g")</p>
                <p><strong>Klasa:</strong> @ticket.Price?.Class?.Name</p>
                <p><strong>Miejsce:</strong> @ticket.Seating</p>
                <p><strong>Dodatkowy bagaż:</strong> @(ticket.ExtraLuggage == true ? "Tak" : "Nie")</p>
                <p><strong>Cena:</strong> @ticket.TicketPrice zł</p>
            </div>
        }
    </div>

    <div class="col-md-4">
        <h4>Zrealizowane</h4>
        @foreach (var ticket in Model.PastTickets)
        {
            <div class="card mb-3 p-2 border-secondary">
                <p><strong>Lot:</strong> @ticket.Price?.Flight?.DepartureAirport?.Name → @ticket.Price?.Flight?.ArrivalAirport?.Name</p>
                <p><strong>Data wylotu:</strong> @ticket.Price?.Flight?.DepartureDate?.ToString("g")</p>
                <p><strong>Data przylotu:</strong> @ticket.Price?.Flight?.ArrivalDate?.ToString("g")</p>
                <p><strong>Klasa:</strong> @ticket.Price?.Class?.Name</p>
                <p><strong>Miejsce:</strong> @ticket.Seating</p>
                <p><strong>Dodatkowy bagaż:</strong> @(ticket.ExtraLuggage == true ? "Tak" : "Nie")</p>
                <p><strong>Cena:</strong> @ticket.TicketPrice zł</p>
            </div>
        }
    </div>
</div>
