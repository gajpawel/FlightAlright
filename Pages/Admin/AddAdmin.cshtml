@page
@model FlightAlright.Pages.Admin.AddAdminModel
@{
    ViewData["Title"] = "Dodaj administratora";
}

<h2>Dodaj administratora</h2>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post">
    <div class="form-group">
        <label>Wybierz tryb dodawania:</label><br />
        <input type="radio" name="Mode" value="new" checked onchange="toggleMode()"> Nowe konto<br />
        <input type="radio" name="Mode" value="existing" onchange="toggleMode()"> Istniejące konto
    </div>

    <div id="newAccountSection">
        <div class="form-group">
            <label asp-for="Account.Name">Imię</label>
            <input asp-for="Account.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Account.Surname">Nazwisko</label>
            <input asp-for="Account.Surname" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Account.Login">Login</label>
            <input asp-for="Account.Login" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Hasło</label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
    </div>

    <div id="existingAccountSection" style="display: none;">
        <div class="form-group mt-3">
            <label>Wybierz istniejące konto klienta:</label>
            <select asp-for="SelectedAccountId" asp-items="Model.AccountList" class="form-control"></select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Zapisz</button>
    <a asp-page="./AdminProfile" class="btn btn-secondary mt-3 ms-2">Anuluj</a>
</form>

@if (Model.AdminList.Any())
{
    <h3 class="mt-5">Lista aktualnych administratorów</h3>
    <table class="table table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Login</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model.AdminList)
            {
                <tr>
                    <td>@admin.Name</td>
                    <td>@admin.Surname</td>
                    <td>@admin.Login</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted mt-4">Brak zarejestrowanych administratorów.</p>
}

@section Scripts {
    <script>
        function toggleMode() {
            var selected = document.querySelector('input[name="Mode"]:checked').value;
            document.getElementById("newAccountSection").style.display = selected === "new" ? "block" : "none";
            document.getElementById("existingAccountSection").style.display = selected === "existing" ? "block" : "none";
        }
    </script>
}
