@page
@model FlightAlright.Pages.Admin.Flights.AddFlightModel
@{
    ViewData["Title"] = "Dodaj nowe połączenie lotnicze";
}

    <h2>Dodaj nowe połączenie lotnicze</h2>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
    <form method="post">
    <div class="mb-3">
        <label asp-for="Flight.DepartureAirportId" class="form-label">Lotnisko startowe</label>
        <select asp-for="Flight.DepartureAirportId" class="form-select" asp-items="Model.AirportSelectList" required>
            <option value="">-- Wybierz lotnisko --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="departureDate" class="form-label">Data i czas odlotu (zgodny z lokalną strefą czasową)</label>
        <input asp-for="departureDate" class="form-control" type="datetime-local" required />
    </div>


    <div class="mb-3">
        <label asp-for="Flight.ArrivalAirportId" class="form-label">Lotnisko docelowe</label>
        <select asp-for="Flight.ArrivalAirportId" class="form-select" asp-items="Model.AirportSelectList" required>
            <option value="">-- Wybierz lotnisko --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="arrivalDate"class="form-label">Data i czas przylotu (zgodny z lokalną strefą czasową)</label>
        <input asp-for="arrivalDate"class="form-control" type="datetime-local" required />
    </div>

    <input type="hidden" name="newFlightId" value="@Model.newFlightId" />
        <button type="submit" class="btn btn-primary">Dalej</button>
    </form>