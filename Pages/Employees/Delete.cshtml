@page
@model FlightAlright.Pages.Employees.DeleteModel

@{
    ViewData["Title"] = "Usuń pracownika";
}

<h2>Usuwanie pracownika</h2>
<hr />

<p class="text-danger">Czy na pewno chcesz usunąć tego pracownika? Konto zostanie zdegradowane do klienta.</p>

<dl class="row">
    <dt class="col-sm-3">Login konta</dt>
    <dd class="col-sm-9">@Model.Employee.Account?.Login</dd>

    <dt class="col-sm-3">Stanowisko</dt>
    <dd class="col-sm-9">@Model.Employee.Position?.Name</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Employee.Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Anuluj</a>
</form>
