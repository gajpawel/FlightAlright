@page
@model FlightAlright.Pages.Employees.CreateModel
@{
    ViewData["Title"] = "Dodaj pracownika";
}

<h2>Dodaj nowego pracownika</h2>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="Employee.AccountId" class="form-label">Konto użytkownika</label>
        <select asp-for="Employee.AccountId" asp-items="@(ViewData["Accounts"] as SelectList)" class="form-control"></select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Employee.PositionId" class="form-label">Stanowisko</label>
        <select asp-for="Employee.PositionId" asp-items="@(ViewData["Positions"] as SelectList)" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-success">Zapisz pracownika</button>
    <a asp-page="/Admin/PersonelManagement" class="btn btn-secondary ms-2">Anuluj</a>
</form>
